{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "files": {
    "ignore": [
      "node_modules/",
      ".cache/",
      "public/",
      "src/gatsby-types.d.ts",
      "src/__generated__/"
    ]
  }
}